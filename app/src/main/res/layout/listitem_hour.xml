<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hourHour"
            style="@style/textWhiteRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/image_small_size" />

        <ImageView
            android:id="@+id/hourImage"
            android:layout_width="@dimen/image_medium_size"
            android:layout_height="@dimen/image_medium_size"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/hourTemperature"
            style="@style/textWhiteRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/image_tiny_size" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>